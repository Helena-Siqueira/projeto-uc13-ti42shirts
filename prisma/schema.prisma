generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Produto {
  id Int @id @default(autoincrement())
  nome_do_produto String
  preco Float
  tamanho String
  @@map("produtos") // <----- Define o nome da tabela
  vendas Venda[]
}

model Transacao {
  id Int @id @default(autoincrement())
  data DateTime
  preco Float
  id_usuario Int
  vendas Venda[]
  @@map("transacao") // <----- Define o nome da tabela
}

model Usuario {
  id Int @id @default(autoincrement())
  nome String
  data_nascimento String
  sexo Int
  email String
  senha String
  cpf String
  telefone String
  cep String
  @@map("usuarios") // <----- Define o nome da tabela
}

model Venda {
  transacao Transacao @relation(fields: [id_transacao], references: [id])
  produto Produto @relation(fields: [id_produto], references: [id])
  quantidade Int

  id_transacao Int
  id_produto Int

  @@unique([id_transacao, id_produto]) // Ã­ndice composta
  @@map("vendas")
  
}

